<h1 class="text-2xl font-bold mb-6">Transportadores</h1>
<div class="mb-4">
  <%= link_to 'Novo Transportador', new_admin_transportador_path, class: 'bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700' %>
</div>

<div class="overflow-x-auto">
  <table class="min-w-full bg-white border border-gray-300 rounded shadow">
    <thead class="bg-gray-100 text-gray-700">
      <tr>
        <th class="px-4 py-2 text-left">Nome</th>
        <th class="px-4 py-2 text-left">CPF</th>
        <th class="px-4 py-2 text-left">Tipo Veículo</th>
        <th class="px-4 py-2 text-left">Capacidade</th>
        <th class="px-4 py-2 text-left">Tipo Cobrança</th>
        <th class="px-4 py-2 text-left">Valor</th>
        <th class="px-4 py-2 text-left">Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @transportadors.each do |t| %>
        <tr class="border-t">
          <td class="px-4 py-2"><%= t.nome %></td>
          <td class="px-4 py-2"><%= t.cpf %></td>
          <td class="px-4 py-2"><%= t.tipo_veiculo %></td>
          <td class="px-4 py-2"><%= t.capacidade_kg %> kg</td>
          <td class="px-4 py-2"><%= t.tipo_cobranca %></td>
          <td class="px-4 py-2">R$ <%= t.valor_cobranca %></td>
          <td class="px-4 py-2 space-x-2">
            <%= link_to 'Editar', edit_admin_transportador_path(t), class: 'text-indigo-600 hover:underline' %>
            <%= link_to 'Excluir', admin_transportador_path(t), method: :delete, data: { confirm: 'Tem certeza?' }, class: 'text-red-600 hover:underline' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
