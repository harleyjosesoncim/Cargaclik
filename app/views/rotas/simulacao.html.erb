<div class="flex h-screen">
  <!-- Mapa -->
  <div id="map" class="w-2/3"></div>

  <!-- Painel lateral -->
  <div class="w-1/3 p-4 space-y-6 bg-gray-50">
    <!-- Etapas da rota -->
    <div data-controller="route-list" class="bg-white p-4 rounded shadow">
      <h2 class="text-lg font-semibold mb-2">Etapas da Rota</h2>
      <ul data-route-list-target="list" class="space-y-2"></ul>
      <button data-action="route-list#addWaypoint"
              class="mt-2 px-4 py-2 bg-blue-600 text-white rounded">+ Adicionar Ponto</button>
    </div>

    <!-- Custo -->
    <div data-controller="cost-display" class="bg-white p-4 rounded shadow">
      <h2 class="text-lg font-semibold">Custo Estimado</h2>
      <p class="text-2xl font-bold mt-2" data-cost-display-target="total">R$ 0,00</p>
      <ul class="mt-4 text-sm text-gray-600">
        <li>Tarifa base: <span data-cost-display-target="base">R$ 0,00</span></li>
        <li>Comiss√£o: <span data-cost-display-target="commission">R$ 0,00</span></li>
      </ul>
    </div>
  </div>
</div>
