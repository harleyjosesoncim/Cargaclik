<h1 class="text-2xl font-bold mb-4">Transportadores</h1>

<table class="min-w-full bg-white border border-gray-300">
  <thead class="bg-gray-100">
    <tr>
      <th class="py-2 px-4 border-b">Nome</th>
      <th class="py-2 px-4 border-b">CPF</th>
      <th class="py-2 px-4 border-b">Tipo Veículo</th>
      <th class="py-2 px-4 border-b">Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @transportadors.each do |transportador| %>
      <tr>
        <td class="py-2 px-4 border-b"><%= transportador.nome %></td>
        <td class="py-2 px-4 border-b"><%= transportador.cpf %></td>
        <td class="py-2 px-4 border-b"><%= transportador.tipo_veiculo %></td>
        <td class="py-2 px-4 border-b">
          <%= link_to "Editar", edit_admin_transportador_path(transportador), class: "text-blue-600" %> |
          <%= link_to "Excluir", admin_transportador_path(transportador), method: :delete, data: { confirm: "Tem certeza?" }, class: "text-red-600" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Novo Transportador", new_admin_transportador_path, class: "mt-4 inline-block bg-green-600 text-white px-4 py-2 rounded" %>
