<div class="p-6">
  <h1 class="text-2xl font-bold mb-4">Painel Admin</h1>
  <div class="grid grid-cols-3 gap-6">
    <div class="bg-white p-4 rounded shadow">
      <h2 class="text-sm uppercase text-gray-500">Solicitações hoje</h2>
      <p class="text-3xl font-bold"><%= @requests_today %></p>
    </div>
    <div class="bg-white p-4 rounded shadow">
      <h2 class="text-sm uppercase text-gray-500">Receita acumulada</h2>
      <p class="text-3xl font-bold">R$ <%= @revenue_total %></p>
    </div>
    <div class="bg-white p-4 rounded shadow">
      <h2 class="text-sm uppercase text-gray-500">Distância média (km)</h2>
      <p class="text-3xl font-bold"><%= @avg_distance %></p>
    </div>
  </div>

  <div class="mt-8 bg-white p-6 rounded shadow">
    <h2 class="text-lg font-semibold mb-4">Configurar Tarifas</h2>
    <%= form_with model: @pricing, url: admin_pricing_path, method: :put, local: false do |f| %>
      <div class="space-y-4">
        <div>
          <%= f.label :base_rate, "Tarifa por km (R$)", class: "block text-sm" %>
          <%= f.number_field :base_rate, step: 0.1, class: "mt-1 w-full border rounded p-2" %>
        </div>
        <div>
          <%= f.label :commission_pct, "Comissão (%)", class: "block text-sm" %>
          <%= f.number_field :commission_pct, step: 0.1, class: "mt-1 w-full border rounded p-2" %>
        </div>
      </div>
      <%= f.submit "Salvar", class: "mt-4 px-4 py-2 bg-green-600 text-white rounded" %>
    <% end %>
  </div>
</div>
