<%= form_with(model: [:admin, transportador], local: true) do |form| %>
  <% if transportador.errors.any? %>
    <div class="mb-4 p-4 bg-red-100 text-red-700 rounded">
      <h2 class="font-bold">Foram encontrados <%= pluralize(transportador.errors.count, "erro") %>:</h2>
      <ul class="list-disc ml-5">
        <% transportador.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div>
      <%= form.label :nome, "Nome", class: "block font-bold" %>
      <%= form.text_field :nome, class: "form-input w-full" %>
    </div>

    <div>
      <%= form.label :cpf, "CPF", class: "block font-bold" %>
      <%= form.text_field :cpf, class: "form-input w-full" %>
    </div>

    <div>
      <%= form.label :rg, "RG", class: "block font-bold" %>
      <%= form.text_field :rg, class: "form-input w-full" %>
    </div>

    <div>
      <%= form.label :data_nascimento, "Data de Nascimento", class: "block font-bold" %>
      <%= form.date_field :data_nascimento, class: "form-input w-full" %>
    </div>

    <div>
      <%= form.label :endereco, "Endereço", class: "block font-bold" %>
      <%= form.text_field :endereco, class: "form-input w-full" %>
    </div>

    <div>
      <%= form.label :cep, "CEP", class: "block font-bold" %>
      <%= form.text_field :cep, class: "form-input w-full" %>
    </div>

    <div>
      <%= form.label :numero_habilitacao, "Número da Habilitação", class: "block font-bold" %>
      <%= form.text_field :numero_habilitacao, class: "form-input w-full" %>
    </div>

    <div>
      <%= form.label :tipo_veiculo, "Tipo de Veículo", class: "block font-bold" %>
      <%= form.select :tipo_veiculo, Transportador::TIPOS_VEICULO, {}, class: "form-select w-full" %>
    </div>

    <div>
      <%= form.label :capacidade_kg, "Capacidade (kg)", class: "block font-bold" %>
      <%= form.number_field :capacidade_kg, step: 1, class: "form-input w-full" %>
    </div>

    <div>
      <%= form.label :tipo_cobranca, "Tipo de Cobrança", class: "block font-bold" %>
      <%= form.select :tipo_cobranca, ['Por km', 'Valor fixo'], {}, class: "form-select w-full" %>
    </div>

    <div>
      <%= form.label :valor_cobranca, "Valor da Cobrança", class: "block font-bold" %>
      <%= form.number_field :valor_cobranca, step: 0.01, class: "form-input w-full" %>
    </div>
  </div>

  <div class="mt-6">
    <%= form.submit class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
<% end %>


