
<h1 class="text-2xl font-bold mb-6">Clientes</h1>

<div class="flex justify-between items-center mb-4">
  <%= link_to 'Cadastrar Cliente', new_admin_cliente_path, class: 'inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded hover:bg-blue-700' %>
  <%= link_to 'Voltar', admin_root_path, class: 'inline-flex items-center px-4 py-2 bg-gray-500 text-white text-sm font-medium rounded hover:bg-gray-600' %>
</div>

<table class="min-w-full bg-white shadow-md rounded-lg overflow-hidden">
  <thead class="bg-gray-100">
    <tr>
      <th class="px-6 py-3 text-left text-sm font-medium text-gray-700">Nome</th>
      <th class="px-6 py-3 text-left text-sm font-medium text-gray-700">Email</th>
      <th class="px-6 py-3 text-left text-sm font-medium text-gray-700">Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @clientes.each do |cliente| %>
      <tr class="border-b">
        <td class="px-6 py-4 text-sm text-gray-900"><%= cliente.nome %></td>
        <td class="px-6 py-4 text-sm text-gray-900"><%= cliente.email %></td>
        <td class="px-6 py-4 text-sm text-gray-900">
          <%= link_to 'Editar', edit_admin_cliente_path(cliente), class: 'text-indigo-600 hover:text-indigo-900 mr-4' %>
          <%= link_to 'Excluir', admin_cliente_path(cliente), method: :delete, data: { confirm: 'Tem certeza?' }, class: 'text-red-600 hover:text-red-900' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
