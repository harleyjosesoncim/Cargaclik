<h1>Editar Pagamento</h1>

<%= form_with(model: @pagamento, local: true) do |form| %>
  <div>
    <%= form.label :user_id %>
    <%= form.number_field :user_id %>
  </div>
  <div>
    <%= form.label :tipo %>
    <%= form.text_field :tipo %>
  </div>
  <div>
    <%= form.label :status %>
    <%= form.text_field :status %>
  </div>
  <div>
    <%= form.label :valor %>
    <%= form.number_field :valor, step: 0.01 %>
  </div>
  <div>
    <%= form.label :link %>
    <%= form.text_field :link %>
  </div>
  <div>
    <%= form.label :gateway_id %>
    <%= form.text_field :gateway_id %>
  </div>
  <div>
    <%= form.submit 'Atualizar' %>
  </div>
<% end %>

<%= link_to 'Voltar', pagamentos_path %>
