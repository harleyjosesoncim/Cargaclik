<div class="max-w-md mx-auto mt-16 p-6 bg-white rounded-2xl shadow">
  <h2 class="text-xl font-bold mb-4 text-center">Login do Administrador</h2>
  <%= form_with url: login_path, method: :post, local: true do |form| %>
    <div class="mb-4">
      <%= form.label :email, class: "block text-gray-700" %>
      <%= form.text_field :email, class: "w-full p-2 border rounded" %>
    </div>
    <div class="mb-4">
      <%= form.label :senha, class: "block text-gray-700" %>
      <%= form.password_field :senha, class: "w-full p-2 border rounded" %>
    </div>
    <div class="text-center">
      <%= form.submit "Entrar", class: "bg-blue-600 text-white py-2 px-4 rounded" %>
    </div>
  <% end %>
</div>
